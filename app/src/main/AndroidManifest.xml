        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.RegisterActivity" />
        <activity android:name=".view.activity.LessonListActivity" />
        <activity android:name=".view.activity.TeachActivity" />
        <activity android:name=".view.activity.MyInfoActivity" />
        <activity android:name=".view.activity.BlogActivity" />
        <activity android:name=".view.activity.NewBlogActivity" />
        <activity android:name=".view.activity.NewTeachActivity" />
