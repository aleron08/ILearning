<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/iv_teach_comment_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_default_head"/>
    <TextView
        android:id="@+id/tv_teach_comment_name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/iv_teach_comment_head"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="趣多多"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    <LinearLayout
        android:id="@+id/ll_star_teach_comment"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="5dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_star_teach_comment_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_star_full"/>
        <ImageView
            android:id="@+id/iv_star_teach_comment_item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_star_full"/>
        <ImageView
            android:id="@+id/iv_star_teach_comment_item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_star_full"/>
        <ImageView
            android:id="@+id/iv_star_teach_comment_item_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_star_half"/>
        <ImageView
            android:id="@+id/iv_star_teach_comment_item_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_star_empty"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_teach_comment_time"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_below="@id/ll_star_teach_comment"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="2018-10-09 20:21:29"/>
    <TextView
        android:id="@+id/tv_teach_comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_teach_comment_head"
        android:layout_marginVertical="10dp"
        android:text="网络课程就是通过网络表现的某门学科的教学内容及实施的教学活动的总和，是信息时代条件下课程新的表现形式。"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_teach_comment_text"
        android:background="@color/colorGray" />
</RelativeLayout>