<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.aleron08.ilearning.view.activity.MyInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_my_info_actionbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="@color/colorBlue"
            android:visibility="gone">
        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/rl_my_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorBlue">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_my_info_back"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingVertical="8dp"
                    android:src="@mipmap/ic_left" />
                <TextView
                    android:id="@+id/tv_my_info_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_my_info_back"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="个人信息"
                    android:textColor="#ffff"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_my_info_save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="7dp"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:text="保存"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="18sp"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:id="@+id/sv_my_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_my_info_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_mine_1"
                    android:layout_marginTop="0dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_my_info_head"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:clickable="true">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="头像"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <ImageView
                            android:id="@+id/rl_my_info_head_icon"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/rl_my_info_head_right"
                            android:layout_marginHorizontal="10dp"
                            android:src="@drawable/ic_default_head" />
                        <ImageView
                            android:id="@+id/rl_my_info_head_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorGray"
                        android:layout_marginLeft="60dp"/>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/tv_my_info_name_left"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="昵称"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/et_my_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tv_my_info_name_left"
                            android:layout_toLeftOf="@id/rl_my_info_name_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:text="未编辑"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"
                            android:background="@null"
                            android:ellipsize="end"/>
                        <ImageView
                            android:id="@+id/rl_my_info_name_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_sex"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="性别"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/tv_my_info_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@id/rl_my_info_sex_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="请选择"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"/>
                        <ImageView
                            android:id="@+id/rl_my_info_sex_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_profile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/tv_my_info_profile_left"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="签名"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/et_my_info_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tv_my_info_profile_left"
                            android:layout_toLeftOf="@id/rl_my_info_profile_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:text="未编辑"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"
                            android:background="@null"
                            android:ellipsize="end"/>
                        <ImageView
                            android:id="@+id/rl_my_info_profile_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorGray"
                        android:layout_marginLeft="60dp"/>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_school"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/tv_my_info_school_left"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="学校"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/et_my_info_school"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tv_my_info_school_left"
                            android:layout_toLeftOf="@id/rl_my_info_school_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:text="未编辑"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"
                            android:background="@null"
                            android:ellipsize="end"/>
                        <ImageView
                            android:id="@+id/rl_my_info_school_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_major"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/tv_my_info_major_left"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="专业"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/et_my_info_major"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tv_my_info_major_left"
                            android:layout_toLeftOf="@id/rl_my_info_major_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:text="未编辑"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"
                            android:background="@null"
                            android:ellipsize="end"/>
                        <ImageView
                            android:id="@+id/rl_my_info_major_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_my_info_hobby"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:clickable="true">
                        <TextView
                            android:id="@+id/tv_my_info_hobby_left"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="center_vertical"
                            android:text="爱好"
                            android:textSize="16sp"
                            android:textColor="@android:color/black" />
                        <EditText
                            android:id="@+id/et_my_info_hobby"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/tv_my_info_hobby_left"
                            android:layout_toLeftOf="@id/rl_my_info_hobby_right"
                            android:layout_marginHorizontal="10dp"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:text="未编辑"
                            android:textSize="16sp"
                            android:textColor="@color/colorDarkGray"
                            android:background="@null"
                            android:ellipsize="end"/>
                        <ImageView
                            android:id="@+id/rl_my_info_hobby_right"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/ic_right" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@color/colorGray"
                        android:layout_below="@id/ll_my_info_1"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>
