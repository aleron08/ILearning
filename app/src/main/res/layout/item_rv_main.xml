<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <TextView
        android:id="@+id/tv_home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="限时优惠"
        android:textSize="16sp"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:layout_marginHorizontal="170dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_home_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_item_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/item01"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_home_item_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="任志强私家解读：普通人有机会财富自由吗？"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_home_item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_item_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/item02"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_home_item_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="阅读听力双9分，口语8分环球教育黄埔师训一期结辩季军"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_home_item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_item_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/item03"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_home_item_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="任志强私家解读：普通人有机会财富自由吗？"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_home_item_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home_item_4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/item04"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_home_item_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="阅读听力双9分，口语8分环球教育黄埔师训一期结辩季军"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        android:layout_alignParentBottom="true"/>
   <RelativeLayout
       android:id="@+id/rl_home_item_more"
       android:layout_width="match_parent"
       android:layout_height="40dp">
       <TextView
           android:id="@+id/tv_home_item_more"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:text="查看更多"
           android:textSize="13sp" />
       <ImageView
           android:layout_width="15dp"
           android:layout_height="match_parent"
           android:layout_toRightOf="@id/tv_home_item_more"
           android:src="@mipmap/ic_right"/>
   </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"
        android:layout_below="@id/ll_mine_2"/>
</LinearLayout>