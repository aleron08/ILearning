<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/background_01"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.aleron08.ilearning.view.activity.RegisterActivity">
    <LinearLayout
        android:id="@+id/ll_register_actionbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        android:layout_alignParentTop="true"
        android:visibility="gone">
    </LinearLayout>
    <EditText
        android:id="@+id/et_register_phone"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:hint="请输入您的手机号..."
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="#ffff"/>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_register_verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:hint="请输验证码..."
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textColorHint="#ffff"/>
        <Button
            android:id="@+id/btn_register_verification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="获取验证码"
            android:textSize="20sp"
            android:textColorHint="#ffff"
            android:background="#0099FF"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_register_pwd"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="请设置您的登录密码..."
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="#ffff"/>
    <EditText
        android:id="@+id/et_register_pwd2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="请再次输入您的密码..."
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="#ffff"/>
    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="注册"
        android:textSize="20sp"
        android:textColorHint="#ffff"
        android:background="#0099FF"
        />
</LinearLayout>
