<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.aleron08.ilearning.view.activity.NewBlogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:id="@+id/ll_new_blog_actionbar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"
            android:background="@color/colorOrange"
            android:layout_alignParentTop="true"
            android:visibility="gone">
        </LinearLayout>
        <android.support.v7.widget.Toolbar
            android:id="@+id/rl_new_blog_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/ll_new_blog_actionbar"
            android:background="@color/colorOrange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_new_blog_back"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:paddingVertical="8dp"
                    android:src="@mipmap/ic_left" />
                <TextView
                    android:id="@+id/tv_new_blog_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_teach_back"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="发布博客"
                    android:textColor="#ffff"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/tv_new_blog_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="发布"
                    android:textSize="18sp"
                    android:textColor="@color/colorDarkGray"
                    android:gravity="center_vertical"
                    android:clickable="false"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="10dp"
                    android:hint="请添加标题"
                    android:textSize="18sp"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorGray"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginVertical="10dp"
                    android:hint="请添加内容"
                    android:textSize="18sp"
                    android:background="@null"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_new_blog_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_add"/>
</RelativeLayout>
